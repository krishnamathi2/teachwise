# Backend environment variables (copy to backend/.env and fill values)

# OpenAI
OPENAI_API_KEY=

# Server
PORT=3001

# Stripe (payments)
# Secret API key from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
# Default recurring price ID (e.g., price_123...) from your Stripe product
STRIPE_PRICE_ID=
# Optional: webhook secret for local testing via `stripe listen`
# STRIPE_WEBHOOK_SECRET=

# Razorpay (India payments)
# Create keys at https://dashboard.razorpay.com
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Optional SMTP for sending quizzes by email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
# Default amount in INR for Pro (e.g., 749 INR)
RAZORPAY_AMOUNT_INR=749
